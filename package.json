{
	"private": true,
	"scripts": {
		"prebuild": "rm -rf distribution",
		"build": "NODE_NO_WARNINGS=1 parcel build",
		"lint": "run-p lint:*",
		"lint:typescript": "tsc --noEmit",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --check .",
		"fix": "run-p fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"test": "run-p lint:* build",
		"test:e2e": "playwright test",
		"watch": "NODE_NO_WARNINGS=1 parcel watch --no-hmr",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-label": "^2.1.1",
		"@radix-ui/react-slider": "^1.2.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.469.0",
		"tailwind-merge": "^2.5.5",
		"tailwindcss-animate": "^1.0.7",
		"webext-options-sync": "^4.3.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@parcel/config-webextension": "^2.13.0",
		"@parcel/resolver-default": "^2.13.0",
		"@playwright/test": "^1.49.1",
		"@types/chrome": "^0.0.287",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-tailwindcss": "^3.17.5",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"npm-run-all2": "^7.0.1",
		"parcel": "^2.13.0",
		"postcss": "^8.4.49",
		"prettier": "3.4.2",
		"process": "^0.11.10",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"targets": {
		"default": {
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	}
}
