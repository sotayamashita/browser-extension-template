{
	"private": true,
	"scripts": {
		"prebuild": "rm -rf distribution",
		"build": "NODE_NO_WARNINGS=1 parcel build",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --check .",
		"fix": "run-p fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"test": "run-p lint:* build",
		"e2e": "playwright test",
		"watch": "NODE_NO_WARNINGS=1 parcel watch --no-hmr",
		"prepare": "husky"
	},
	"dependencies": {
		"webext-base-css": "^2.0.1",
		"webext-options-sync": "^4.3.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@parcel/config-webextension": "^2.13.0",
		"@parcel/resolver-default": "^2.13.0",
		"@playwright/test": "^1.49.1",
		"@types/chrome": "^0.0.287",
		"@types/node": "^22.10.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"npm-run-all2": "^7.0.1",
		"parcel": "^2.13.0",
		"prettier": "3.4.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"targets": {
		"default": {
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	}
}
